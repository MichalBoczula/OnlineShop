@model OnlineShop.Web.Application.ViewModels.ShippingAddress.ShippingAddressCreateAndModifyVM

<div class="form-input-container">
    <div class="row form-row">
        <div class="col-lg-6">
            <form asp-controller="ShippingAddress" asp-action="AddShippingAddress" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="PostalCode" id="PostalCode"  class="form-control form-shipping-input" placeholder="Postal Code..."/>
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="City" id="City"  class="form-control form-shipping-input" placeholder="City..."/>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Street" id="Street"  class="form-control form-shipping-input" placeholder="Street..."/>
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="HouseNumber"  id="HouseNumber" class="form-control form-shipping-input" placeholder="House Number..."/>
                    <span asp-validation-for="HouseNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="FlatNumber"  id="FlatNumber" class="form-control form-shipping-input" placeholder="Flat Number..."/>
                    <span asp-validation-for="FlatNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" id="back-link"><i class="fas fa-arrow-circle-left" id="shipping-address-icon"></i>Back</a>
    </div>
</div>


