@model OnlineShop.Application.ViewModels.Mobile.MobilePhoneDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>




<div class="details-container">
    <div class="container" id="list">
        <div class="row content">
            <div class="col-lg-6">
                <div class="product-name">
                    <i class="fas fa-signature fa-2x product-name-icon"></i>
                    <p class="product-name-name">@Model.Brand  @Model.Name</p>
                </div>
                <div class="description-container">
                    <h3 class="description-title">Information</h3>
                    <p class="description">@Model.Description</p>
                </div>
                <div class="return-container">
                    <a asp-controller="MobilePhone" asp-action="Index">
                        <p class="return-desc"><span class="return-btn" aria-hidden="true"></span>Back to List</p>
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="carousel-container">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100 carousel-image" src="~/images/@Model.MainImage" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 carousel-image" src="~/images/@Model.FirstImage" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 carousel-image" src="~/images/@Model.SecondImage" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="details-container">
    <div class="container" id="list">
        <div class="row content">
            <div class="col-lg-6">
                <div class="hardware-container">
                    <i class="fas fa-microchip fa-2x" id="hardware-icon"></i>
                    <h3 class="hardware-title">Hardware</h3>
                </div>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th scope="row">Processor Name</th>
                            <td>@Model.Hardware.ProcessorName</td>
                        </tr>
                        <tr>
                            <th scope="row">Processor Clock</th>
                            <td>@Model.Hardware.OperationSystem</td>
                        </tr>
                        <tr>
                            <th scope="row">Graphics Processor</th>
                            <td>@Model.Hardware.GraphicsProcessor</td>
                        </tr>
                        <tr>
                            <th scope="row">Operation Memory</th>
                            <td>@Model.Hardware.OperationMemory GB RAM</td>
                        </tr>
                        <tr>
                            <th scope="row">Memory Space</th>
                            <td>@Model.Hardware.MemorySpace GB</td>
                        </tr>
                        <tr>
                            <th scope="row">Sim Card Type</th>
                            <td>@Model.Hardware.SimCardType</td>
                        </tr>
                        <tr>
                            <th scope="row">Battery Capacity</th>
                            <td>@Model.Hardware.BatteryCapacity mAh</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-6">
                <div class="hardware-container">
                    <i class="fas fa-mobile fa-2x" id="screen-icon"></i>
                    <h3 class="hardware-title">Screen</h3>
                </div>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th scope="row">Screen Type</th>
                            <td>@Model.Screen.ScreenType</td>
                        </tr>
                        <tr>
                            <th scope="row">Size</th>
                            <td>@Model.Screen.Size inches</td>
                        </tr>
                        <tr>
                            <th scope="row">Colors Quantity</th>
                            <td>@Model.Screen.ColorsQuantity mln</td>
                        </tr>
                        <tr>
                            <th scope="row">Horizontal Resolution</th>
                            <td>@Model.Screen.HorizontalResolution px</td>
                        </tr>
                        <tr>
                            <th scope="row">Vertical Resolution</th>
                            <td>@Model.Screen.VerticalResolution px</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-lg-6">
                <div class="hardware-container">
                    <i class="fas fa-camera fa-2x" id="camera-icon"></i>
                    <h3 class="hardware-title">Camera</h3>
                </div>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th scope="row">Zoom</th>
                            <td>@Model.Camera.Zoom X</td>
                        </tr>
                        <tr>
                            <th scope="row">Front Resulution</th>
                            <td>@Model.Camera.FrontResulution Mpix</td>
                        </tr>
                        <tr>
                            <th scope="row">Main Resulution</th>
                            <td>@Model.Camera.MainResulution Mpix</td>
                        </tr>
                        <tr>
                            <th scope="row">Additional Resulution</th>
                            <td>@Model.Camera.AdditionalResulution Mpix</td>
                        </tr>
                        <tr>
                            <th scope="row">Video Recorder Resolution</th>
                            <td>@Model.Camera.VideoRecorderResolution</td>
                        </tr>
                        <tr>
                            <th scope="row">Video FPS</th>
                            <td>@Model.Camera.VideoFPS Fps</td>
                        </tr>
                        @{var funs = Model.Camera.Functions.Split(';');}
                        @foreach (var fun in funs)
                        {
                            <tr>
                                <th scope="row">@fun</th>
                                <td><i class="fas fa-check-circle" id="function-icon"></i></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-lg-6">
                <div class="hardware-container">
                    <i class="fas fa-list-alt fa-2x" id="multimedia-icon"></i>
                    <h3 class="hardware-title">Multimedia</h3>
                </div>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th scope="row">Bluetooth</th>
                            @if (Model.Multimedia.Bluetooth)
                            {
                                <td><i class="fas fa-check-circle" id="function-icon"></i></td>
                            }
                            else
                            {
                                <td><i class="fas fa-times-circle" id="function-icon"></i></td>
                            }
                        </tr>
                        <tr>
                            <th scope="row">LTE</th>
                            @if (Model.Multimedia.LTE)
                            {
                                <td><i class="fas fa-check-circle" id="function-icon"></i></td>
                            }
                            else
                            {
                                <td><i class="fas fa-times-circle" id="function-icon"></i></td>
                            }
                        </tr>
                        <tr>
                            <th scope="row">GPS</th>
                            @if (Model.Multimedia.GPS)
                            {
                                <td><i class="fas fa-check-circle" id="function-icon"></i></td>
                            }
                            else
                            {
                                <td><i class="fas fa-times-circle" id="function-icon"></i></td>
                            }
                        </tr>
                        <tr>
                            <th scope="row">NFC</th>
                            @if (Model.Multimedia.NFC)
                            {
                                <td><i class="fas fa-check-circle" id="function-icon"></i></td>
                            }
                            else
                            {
                                <td><i class="fas fa-times-circle" id="function-icon"></i></td>
                            }
                        </tr>
                        <tr>
                            <th scope="row">WiFiCalling</th>
                            @if (Model.Multimedia.WiFiCalling)
                            {
                                <td><i class="fas fa-check-circle" id="function-icon"></i></td>
                            }
                            else
                            {
                                <td><i class="fas fa-times-circle" id="function-icon"></i></td>
                            }
                        </tr>
                        <tr>
                            <th scope="row">FingerPrintReader</th>
                            @if (Model.Multimedia.FingerPrintReader)
                            {
                                <td><i class="fas fa-check-circle" id="function-icon"></i></td>
                            }
                            else
                            {
                                <td><i class="fas fa-times-circle" id="function-icon"></i></td>
                            }
                        </tr>
                        <tr>
                            <th scope="row">USB Type</th>
                            <td>@Model.Multimedia.USBType</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">

    </div>


    @*<hr />
        <dl class="row">

        </dl>*@
</div>







