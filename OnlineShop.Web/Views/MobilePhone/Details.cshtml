@model OnlineShop.Application.ViewModels.Mobile.MobileDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>




<div class="details-container">
    <div class="container" id="list">
        <div class="row content">
            <div class="col-md-6">
                <div class="product-name">
                    <i class="fas fa-signature fa-2x product-name-icon"></i>
                    <p class="product-name-name">@Model.Brand  @Model.Name</p>
                </div>
                <div class="description-container">
                    <h3 class="description-title">Information</h3>
                    <p class="description">@Model.Description</p>
                </div>
                <div class="return-container">
                    <p class="return-desc"><span class="return-btn" aria-hidden="true"></span>Back to List</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="carousel-container">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100 carousel-image" src="~/images/@Model.MainImage" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 carousel-image" src="~/images/@Model.MainImage" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 carousel-image" src="~/images/@Model.MainImage" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">

        </div>


