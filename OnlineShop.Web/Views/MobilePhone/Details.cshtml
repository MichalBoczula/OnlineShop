@model OnlineShop.Application.ViewModels.Mobile.MobileDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>




<div class="details-container">
    <div class="container" id="list">
        <div class="row content">
            <div class="col-md-6">
                <div class="product-name">
                    <i class="fas fa-signature fa-2x product-name-icon"></i>
                    <p class="product-name-name">@Model.Brand  @Model.Name</p>
                </div>
                <div class="description-container">
                    <h3 class="description-title">Information</h3>
                    <p class="description">@Model.Description</p>
                </div>
                <div class="return-container">
                    <p class="return-desc"><span class="return-btn" aria-hidden="true"></span>Back to List</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="carousel-container">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100 carousel-image" src="~/images/@Model.MainImage" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 carousel-image" src="~/images/@Model.MainImage" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 carousel-image" src="~/images/@Model.MainImage" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="details-container">
    <div class="container" id="list">
        <div class="row content">
            <div class="col-lg-4">
                <div class="hardware-container">
                    <i class="fas fa-microchip fa-2x" id="hardware-icon"></i>
                    <h3 class="hardware-title">Hardware</h3>
                </div>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th scope="row">ProcessorName</th>
                            <td>@Model.Hardware.ProcessorName</td>
                        </tr>
                        <tr>
                            <th scope="row">ProcessorClock</th>
                            <td>@Model.Hardware.ProcessorClock</td>
                        </tr>
                        <tr>
                            <th scope="row">GraphicsProcessor</th>
                            <td>@Model.Hardware.GraphicsProcessor</td>
                        </tr>
                        <tr>
                            <th scope="row">OperationMemory</th>
                            <td>@Model.Hardware.OperationMemory GB RAM</td>
                        </tr>
                        <tr>
                            <th scope="row">MemorySpace</th>
                            <td>@Model.Hardware.MemorySpace GB</td>
                        </tr>
                        <tr>
                            <th scope="row">SimCardType</th>
                            <td>@Model.Hardware.SimCardType</td>
                        </tr>
                        <tr>
                            <th scope="row">BatteryCapacity</th>
                            <td>@Model.Hardware.BatteryCapacity mAh</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <div class="hardware-container">
                    <i class="fas fa-camera fa-2x" id="camera-icon"></i>
                    <h3 class="hardware-title">Camera</h3>
                </div>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th scope="row">Zoom</th>
                            <td>@Model.Camera.Zoom X</td>
                        </tr>
                        <tr>
                            <th scope="row">FrontResulution</th>
                            <td>@Model.Camera.FrontResulution Mpix</td>
                        </tr>
                        <tr>
                            <th scope="row">MainResulution</th>
                            <td>@Model.Camera.MainResulution Mpix</td>
                        </tr>
                        <tr>
                            <th scope="row">AdditionalResulution</th>
                            <td>@Model.Camera.AdditionalResulution Mpix</td>
                        </tr>
                        <tr>
                            <th scope="row">VideoRecorderResolution</th>
                            <td>@Model.Camera.VideoRecorderResolution</td>
                        </tr>
                        <tr>
                            <th scope="row">VideoFPS</th>
                            <td>@Model.Camera.VideoFPS Fps</td>
                        </tr>
                        @foreach (var fun in Model.Camera.Functions)
                        {
                            <tr>
                                <th scope="row">@fun</th>
                                <td><i class="fas fa-check-circle" id="function-icon"></i></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <div class="hardware-container">
                    <i class="fas fa-list-alt fa-2x" id="multimedia-icon"></i>
                    <h3 class="hardware-title">Multimedia</h3>
                </div>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Mark</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Jacob</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>twitter</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">

    </div>


    @*<hr />
        <dl class="row">

        </dl>*@
</div>
</div>







