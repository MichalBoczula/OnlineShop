@model IEnumerable<MobilePhoneForHomeVM>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShop.Web</title>
    <link href='@(Url.Content("~/css/home.css") + "?v=" + Guid.NewGuid().ToString())' rel='stylesheet' type='text/css' />
</head>

<section id="container">
    <article class="container-title">
        <h1 class="home-title">Mobile Galactica</h1>
    </article>
    <article class="container container-best-sellers">
        <div class="row">
            @foreach (var phone in Model)
            {
                <div class="col-lg-4 container-card">
                    <div class="card" style="width: 18rem;">
                        <img src="~/images/@phone.MainImage" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">@phone.Brand @phone.Name</h5>
                        </div>
                    </div>
                </div>
            }

        </div>
    </article>
    <article class="container-btn">
        <a asp-controller="MobilePhone" asp-action="Index">
            <div class="to-list-btn">dsadsa</div>
        </a>
    </article>
    <div class="col-lg-4 container-card">
        <div class="card" style="width: 18rem;">
            <img src="~\images\Apple\iPhone 12\Main.png" class="card-img">
            <div class="card-body">
                <h5 class="card-title">Iphone 123</h5>
            </div>
        </div>
    </div>
</section>